<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Wearify - Shop</title>
    <link rel="stylesheet" href="/css/shirt.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    
    <style>
        /* CSS for the Offer UI */
        .price-wrapper {
            display: flex !important;
            align-items: baseline !important;
            gap: 10px !important;
            margin-top: 10px !important;
        }
        .original-price {
            text-decoration: line-through !important;
            color: #888 !important;
            font-size: 0.9rem !important;
        }
        .sale-price {
            color: #fff !important;
            font-weight: bold !important;
            font-size: 1.1rem !important;
        }
        .discount-text {
            color: #22c55e !important;
            font-size: 0.85rem !important;
            font-weight: 600 !important;
        }

        /* Wishlist Button Styling */
        .image-wrapper {
            position: relative;
            overflow: hidden;
        }
        
        .floating-discount {
            position: absolute;
            top: 10px;
            left: 10px;
            background: #ef4444;
            color: white;
            padding: 4px 8px;
            font-size: 0.8rem;
            font-weight: bold;
            border-radius: 3px;
            z-index: 2;
        }

        .wishlist-btn {
            position: absolute;
            top: 10px;
            right: 10px;
            background: rgba(0, 0, 0, 0.4);
            backdrop-filter: blur(4px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            width: 38px;
            height: 38px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            z-index: 5;
            transition: all 0.3s ease;
            padding: 0;
        }

        .wishlist-btn:hover {
            background: rgba(255, 255, 255, 0.9);
            transform: scale(1.1);
        }

        .wishlist-btn:hover .heart-icon {
            filter: none;
        }

        .heart-icon {
            font-size: 1.2rem;
            line-height: 1;
        }

        .product-info {
            background: #111 !important;
            padding: 15px !important;
        }
    </style>
</head>

<body class="shop-page">

<header class="shop-header">
    <a href="/home" class="logo">Wearify</a>

    <div class="categories-wrapper" id="categoriesWrapper">
        <% categories.forEach(category => { %>
            <a href="/shop/<%= category.name %>" class="category-card">
                <h3><%= category.name %></h3>
            </a>
        <% }) %>
    </div>

    <div class="header-tools right-tools">
        <button class="cat-toggle-btn" onclick="toggleCategories()">Categories</button>
        <button class="filter-toggle-btn" onclick="toggleFilter()">Filters</button>

        <div class="search-bar">
            <input type="text" id="shopSearch" placeholder="Search products..." value="<%= selectedFilters.search || '' %>">
        </div>

        <div class="icons">
            <a href="/wishlist" class="icon" style="text-decoration: none;">‚ù§Ô∏è</a>
            <a href="/home/cart" class="icon" style="text-decoration: none;">üõí</a>
        </div>
    </div>
</header>

<div class="shop-container">
    <aside class="sidebar">
        <form id="filterForm">
            <div class="filter-section">
                <h3>Max Price</h3>
                <input type="range" name="maxPrice" min="0" max="2000" class="slider" value="<%= selectedFilters.maxPrice || 2000 %>">
                <div class="price-labels">
                    <span>$0</span> - <span>$<%= selectedFilters.maxPrice || 2000 %></span>
                </div>
            </div>

            <div class="filter-section">
                <h3>Size</h3>
                <% ['S','M','L','XL','XXL'].forEach(size => { %>
                    <label class="checkbox-container">
                        <input type="checkbox" name="size" value="<%= size %>"
                            <%= (selectedFilters.sizes && selectedFilters.sizes.split(',').includes(size)) ? 'checked' : '' %>>
                        <span class="checkmark"></span> <%= size %>
                    </label>
                <% }) %>
            </div>

            <div class="filter-section">
                <h3>Sort By</h3>
                <% [
                    { val:'popularity', label:'Popularity' },
                    { val:'new', label:'New Arrivals' },
                    { val:'priceLow', label:'Price (Low ‚Üí High)' },
                    { val:'priceHigh', label:'Price (High ‚Üí Low)' }
                ].forEach(s => { %>
                    <label class="radio-container">
                        <input type="radio" name="sort" value="<%= s.val %>"
                            <%= selectedFilters.sort === s.val ? 'checked' : '' %>>
                        <span class="radio-mark"></span> <%= s.label %>
                    </label>
                <% }) %>
            </div>
        </form>
    </aside>

    <main class="product-listing">
        <div class="listing-header">
            <h1><%= category.name.toUpperCase() %> BUILT FOR MEN</h1>
            <p>Premium selection for every occasion</p>
        </div>

        <div class="product-grid">
            <% if (products.length) { %>
                <% products.forEach(p => { %>
                    <div class="product-card">
                        <div class="image-wrapper">
                            <% if (p.offerPercentage && p.offerPercentage > 0) { %>
                                <div class="floating-discount"><%= p.offerPercentage %>% OFF</div>
                            <% } %>
                            
                            <button class="wishlist-btn" title="Add to Wishlist" onclick="addToWishlist(event, '<%= p._id %>')">
                                <span class="heart-icon">‚ù§Ô∏è</span>
                            </button>

                            <a href="/shop/details/<%= p._id %>">
                                <img src="<%= p.images[0] %>" alt="<%= p.name %>">
                            </a>
                        </div>
                        
                        <div class="product-info">
                            <h4 style="color: white !important;"><%= p.name %></h4>
                            <div class="price-wrapper">
                                <% if (p.offerPercentage && p.offerPercentage > 0) { %>
                                    <span class="sale-price">$<%= p.salePrice || p.price %></span>
                                    <span class="original-price">$<%= p.regularPrice %></span>
                                    <span class="discount-text"><%= p.offerPercentage %>% OFF</span>
                                <% } else { %>
                                    <span class="sale-price">$<%= p.price %></span>
                                <% } %>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <p class="no-results">No products found.</p>
            <% } %>
        </div>

        <div class="pagination">
            <% for(let i=1;i<=totalPages;i++){ %>
                <span class="page-num <%= currentPage===i?'active':'' %>"
                      onclick="changePage(<%= i %>)"><%= i %></span>
            <% } %>
        </div>
    </main>
</div>

<script>
const categorySlug = "<%= category.name %>";
const filterForm = document.getElementById('filterForm');
const searchInput = document.getElementById('shopSearch');

function debounce(fn, delay){
    let t;
    return (...args)=>{
        clearTimeout(t);
        t=setTimeout(()=>fn(...args),delay);
    };
}

// Wishlist Logic
async function addToWishlist(event, productId) {
    event.preventDefault();
    event.stopPropagation();

    try {
        const response = await fetch(`/shop/details/${productId}/wishlist`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ productId })
        });

        const data = await response.json();

        if (data.success) {
            Swal.fire({
                icon: 'success',
                title: 'Wishlist Updated',
                text: data.message,
                timer: 1500,
                showConfirmButton: false,
                background: '#161b22',
                color: '#fff'
            });
        } else {
            Swal.fire({
                icon: 'info',
                title: 'Note',
                text: data.message,
                background: '#161b22',
                color: '#fff'
            });
        }
    } catch (err) {
        Swal.fire({
            icon: 'error',
            title: 'Unauthorized',
            text: 'Please login to use the wishlist.',
            background: '#161b22',
            color: '#fff'
        });
    }
}

function applyFilters(page=1){
    const params = new URLSearchParams();
    const sizes=[...document.querySelectorAll('input[name=size]:checked')].map(i=>i.value);
    if(sizes.length) params.set('sizes',sizes.join(','));
    const sort=document.querySelector('input[name=sort]:checked');
    if(sort) params.set('sort',sort.value);
    params.set('maxPrice',document.querySelector('.slider').value);
    if(searchInput.value) params.set('search',searchInput.value);
    params.set('page',page);
    location.href=`/shop/${categorySlug}?${params}`;
}

searchInput.addEventListener('input', debounce(()=>applyFilters(1),500));
filterForm.addEventListener('change',()=>applyFilters(1));

function changePage(p){ applyFilters(p); }

function toggleCategories() {
    document.getElementById('categoriesWrapper').classList.toggle('show');
}

function toggleFilter() {
    document.querySelector('.sidebar').classList.toggle('open');
}
</script>

</body>
</html>