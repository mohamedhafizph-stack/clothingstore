    <main class="admin-content">
        <header class="content-header">
            <h1>Order Hub</h1>
            <p>Monitor transactions, track deliveries, and manage returns.</p>
        </header>

        <section class="controls-row">
            <div class="search-container">
                <i class="fas fa-search"></i>
                <input type="text" id="orderSearch" placeholder="Search Order ID..." value="<%= searchTerm %>" oninput="handleSearch(this.value)">
            </div>
            <div class="filter-group">
                <select id="statusFilter" onchange="filterStatus(this.value)">
                    <option value="All" <%= currentStatus === 'All' ? 'selected' : '' %>>All Statuses</option>
                    <option value="Pending" <%= currentStatus === 'Pending' ? 'selected' : '' %>>Pending</option>
                    <option value="Delivered" <%= currentStatus === 'Delivered' ? 'selected' : '' %>>Delivered</option>
                    <option value="Return Requested" <%= currentStatus === 'Return Requested' ? 'selected' : '' %>>Return Requested</option>
                </select>
            </div>
        </section>

        <div class="table-wrapper">
            <table class="admin-table">
                <thead>
                    <tr>
                        <th>Order Ref</th>
                        <th>Customer</th>
                        <th>Total</th>
                        <th>Payment Status</th>
                        <th>Product Status Tracking</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (orders && orders.length > 0) { %>
                        <% orders.forEach(order => { %>
                            <tr>
                                <td style="color: var(--primary-accent); font-weight: bold; font-family: monospace;">#<%= order.orderId %></td>
                                <td>
                                    <div style="font-weight: 600;"><%= order.user?.name %></div>
                                    <div style="font-size: 12px; color: var(--text-dim);"><%= order.user?.email %></div>
                                </td>
                                <td style="font-weight: bold;">â‚¹<%= order.totalPrice.toFixed(2) %></td>
                                <td>
                                    <span class="payment-status <%= order.paymentStatus.toLowerCase() %>">
                                        <i class="fas <%= order.paymentStatus === 'Paid' ? 'fa-check-circle' : 'fa-clock' %>"></i>
                                        <%= order.paymentStatus %>
                                    </span>
                                </td>
                                <td class="items-status-column">
                                    <% order.items.forEach(item => { %>
                                        <% 
                                            // Define terminal statuses that lock the UI
                                            const isLocked = ['Cancelled', 'Delivered', 'Returned'].includes(item.status);
                                        %>
                                        <div class="item-status-row" style="margin-bottom: 12px; padding-bottom: 8px; border-bottom: 1px solid rgba(255,255,255,0.05);">
                                            <div style="font-size: 11px; color: var(--text-dim); margin-bottom: 4px;">
                                                <%= item.product?.name %> (<%= item.size %>)
                                            </div>
                                            
                                            <select class="status-select-mini <%= item.status.toLowerCase().replace(/\s/g, '-') %>" 
                                                    onchange="updateItemStatus('<%= order._id %>', '<%= item._id %>', this.value)"
                                                    <%= isLocked ? 'disabled' : '' %>>
                                                
                                                <option value="Pending" <%= item.status === 'Pending' ? 'selected' : '' %>>Pending</option>
                                                <option value="Shipped" <%= item.status === 'Shipped' ? 'selected' : '' %>>Shipped</option>
                                                <option value="Delivered" <%= item.status === 'Delivered' ? 'selected' : '' %>>Delivered</option>
                                                <option value="Cancelled" <%= item.status === 'Cancelled' ? 'selected' : '' %>>Cancelled</option>
                                                
                                                <% if(item.status === 'Return Requested') { %>
                                                    <option value="Return Requested" selected disabled>Return Requested</option>
                                                    <option value="Returned">Approve Return</option>
                                                <% } %>
                                                
                                                <option value="Returned" <%= item.status === 'Returned' ? 'selected' : '' %>>Returned</option>
                                            </select>
                                            
                                            <% if(isLocked) { %>
                                                <div class="locked-label"><i class="fas fa-lock"></i> Finalized</div>
                                            <% } %>
                                        </div>
                                    <% }) %>
                                </td>
                                <td>
                                    <a href="/admin/orders/<%= order._id %>" class="btn-view">View Details</a>
                                </td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr><td colspan="6" style="text-align: center; padding: 60px; color: var(--text-dim);">No orders found matching your criteria.</td></tr>
                    <% } %>
                </tbody>
            </table>
        </div>

      <%- include('../partials/pagination', { currentPage, totalPages }) %>
    </main>

    <script>
        let timer;
        function handleSearch(val) {
            clearTimeout(timer);
            timer = setTimeout(() => {
                window.location.href = `/admin/orders?status=<%= currentStatus %>&search=${val}`;
            }, 700);
        }

        function filterStatus(status) {
            window.location.href = `/admin/orders?status=${status}&search=<%= searchTerm %>`;
        }

        async function updateItemStatus(orderId, itemId, newStatus) {
            const result = await Swal.fire({
                title: 'Update Item?',
                text: `Are you sure you want to change this item's status to "${newStatus}"?`,
                icon: 'question',
                showCancelButton: true,
                background: '#161b22',
                color: '#fff',
                confirmButtonColor: '#3b82f6',
                cancelButtonColor: '#30363d',
                confirmButtonText: 'Yes, update status'
            });

            if (result.isConfirmed) {
                try {
                    const response = await fetch('/admin/orders/update-item-status', {
                        method: 'PATCH',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ orderId, itemId, status: newStatus })
                    });

                    const data = await response.json();
                    if (data.success) {
                        Swal.fire({ 
                            icon: 'success', 
                            title: 'Status Updated', 
                            background: '#161b22', 
                            color: '#fff', 
                            timer: 1000, 
                            showConfirmButton: false 
                        });
                        setTimeout(() => location.reload(), 1000);
                    } else {
                        Swal.fire({ icon: 'error', title: 'Update Failed', text: data.message, background: '#161b22', color: '#fff' });
                        location.reload(); // Revert UI
                    }
                } catch (error) {
                    Swal.fire({ icon: 'error', title: 'Error', text: 'Server Communication Failed', background: '#161b22', color: '#fff' });
                }
            } else {
                location.reload(); // Revert dropdown selection
            }
        }
    </script>
