<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Details | Wearify</title>
    <link rel="stylesheet" href="/css/order-details.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body class="dark-theme">

    <nav class="navbar">
        <div class="nav-container">
            <div class="nav-left">
                <a href="/" class="logo"><i class="fas fa-square"></i> Wearify</a>
            </div>
        </div>
    </nav>

    <main class="item-details-container">
        <nav class="breadcrumb">
            <a href="/user/profile">Profile</a> / 
            <a href="/user/orders">Orders</a> / 
            <span class="active">Order Details</span>
        </nav>

        <header class="order-header">
            <div class="header-main">
                <h1>Order #<%= order.orderId %></h1>
                <span class="status-pill status-<%= order.status.toLowerCase().replace(' ', '-') %>">
                    <%= order.status %>
                </span>
            </div>
            <p class="order-date">Placed on <%= new Date(order.createdAt).toLocaleDateString('en-US', { day: 'numeric', month: 'long', year: 'numeric' }) %></p>
        </header>

        <% if (order.status !== 'Cancelled' && !['Return Requested', 'Returned'].includes(order.status)) { %>
        <section class="tracking-wrapper">
            <div class="tracking-line"></div>
            <div class="tracking-steps">
                <% 
                   const steps = ['Pending', 'Processing', 'Shipped', 'Delivered']; 
                   const currentIdx = steps.indexOf(order.status);
                %>
                <% steps.forEach((step, index) => { %>
                    <div class="step-item <%= currentIdx >= index ? 'active' : '' %>">
                        <div class="step-dot">
                            <i class="fas <%= index === 0 ? 'fa-check' : index === 1 ? 'fa-cog' : index === 2 ? 'fa-truck' : 'fa-home' %>"></i>
                        </div>
                        <span class="step-label"><%= step === 'Pending' ? 'Placed' : step %></span>
                    </div>
                <% }); %>
            </div>
        </section>
        <% } else if (order.status === 'Cancelled') { %>
            <div class="alert-card danger">
                <i class="fas fa-times-circle"></i> This order was cancelled and a refund (if applicable) has been processed to your wallet.
            </div>
        <% } %>

        <div class="details-grid">
            <div class="items-column">
                <h3 class="section-label">Ordered Items</h3>
                <% order.items.forEach(item => { %>
                    <div class="item-card-neat">
                        <div class="item-thumb">
                            <% if (item.product && item.product.images && item.product.images.length > 0) { %>
                                <img src="<%= item.product.images[0] %>" alt="<%= item.product.name %>" style="width: 100%; height: 100%; object-fit: cover; border-radius: 4px;">
                            <% } else { %>
                                <i class="fas fa-box"></i>
                            <% } %>
                        </div>
                        
                        <div class="item-details">
                            <div class="item-title-row">
                                <h4><%= item.product.name %></h4>
                                <span class="item-status-tag"><%= item.status %></span>
                            </div>
                            <p class="item-sub">Quantity: <%= item.quantity %> • Price: $<%= item.price.toFixed(2) %></p>
                            
                            <div class="item-footer-actions">
                                <% if (['Pending', 'Processing'].includes(order.status) && item.status !== 'Cancelled') { %>
                                    <button onclick="cancelItem('<%= order._id %>', '<%= item._id %>')" class="btn-item-cancel">
                                        <i class="fas fa-times"></i> Cancel Item
                                    </button>
                                <% } %>

                                <% if (order.status === 'Delivered' && item.status === 'Delivered') { %>
                                    <button onclick="requestItemReturn('<%= order._id %>', '<%= item._id %>')" class="btn-item-return">
                                        <i class="fas fa-undo"></i> Return Item
                                    </button>
                                <% } %>

                                <% if (['Cancelled', 'Returned', 'Return Requested', 'Rejected'].includes(item.status)) { %>
                                    <span class="status-notice">
                                        <i class="fas fa-info-circle"></i> Item <%= item.status %>
                                    </span>
                                <% } %>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>

            <div class="info-column">
                <div class="glass-card">
                    <h3 class="section-label">Shipping Address</h3>
                    <address>
                        <strong><%= order.shippingAddress.fullName %></strong><br>
                        <%= order.shippingAddress.addressLine %><br>
                        <%= order.shippingAddress.city %>, <%= order.shippingAddress.state %> - <%= order.shippingAddress.pincode %><br>
                        <div class="phone-box">
                            <i class="fas fa-phone-alt"></i> <%= order.shippingAddress.phone %>
                        </div>
                    </address>
                </div>

                <div class="glass-card">
                    <h3 class="section-label">Payment Details</h3>
                    <div class="summary-row">
                        <span>Method</span>
                        <span class="val"><%= order.paymentMethod %></span>
                    </div>
                    <div class="summary-row total-row">
                        <span>Grand Total</span>
                        <span class="val">$<%= order.totalPrice.toFixed(2) %></span>
                    </div>
                </div>

                <% if (order.status === 'Delivered' && !order.items.every(i => i.status === 'Returned')) { %>
                    <button onclick="initiateFullOrderReturn('<%= order._id %>')" class="btn-full-return">
                        <i class="fas fa-undo"></i> Return Entire Order
                    </button>
                <% } %>
            </div>
        </div>
    </main>

    <footer class="footer">
        <p>© 2026 Wearify. Handcrafted with care.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // 1. Single Item Return
        async function requestItemReturn(orderId, itemId) {
            const { value: reason } = await Swal.fire({
                title: 'Return Item',
                input: 'select',
                inputOptions: {
                    'Size Issue': 'Size Issue',
                    'Defective': 'Defective Product',
                    'Wrong Item': 'Wrong Item Received',
                    'Quality': 'Quality not as expected'
                },
                inputPlaceholder: 'Reason for return',
                showCancelButton: true,
                background: '#161b22',
                color: '#fff',
                confirmButtonColor: '#3fb950'
            });

            if (reason) {
                try {
                    const response = await fetch('/orders/return-item', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ orderId, itemId, reason })
                    });
                    const data = await response.json();
                    if (data.success) {
                        Swal.fire('Success', 'Return request sent', 'success').then(() => location.reload());
                    }
                } catch (err) { console.error(err); }
            }
        }

        // 2. Full Order Return
        async function initiateFullOrderReturn(orderId) {
            const { value: reason } = await Swal.fire({
                title: 'Return Full Order',
                text: "Tell us why you're returning the whole order:",
                input: 'textarea',
                inputPlaceholder: 'Type your reason here...',
                showCancelButton: true,
                background: '#161b22',
                color: '#fff',
                confirmButtonColor: '#f85149'
            });

            if (reason) {
                try {
                    const response = await fetch('/orders/return-full-order', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ orderId, reason })
                    });
                    const data = await response.json();
                    if (data.success) {
                        Swal.fire('Requested', 'Our team will contact you shortly.', 'success').then(() => location.reload());
                    }
                } catch (err) { console.error(err); }
            }
        }

        // 3. Cancel Item
        async function cancelItem(orderId, itemId) {
            const result = await Swal.fire({
                title: 'Are you sure?',
                text: "Do you want to cancel this item?",
                icon: 'warning',
                showCancelButton: true,
                background: '#161b22',
                color: '#fff',
                confirmButtonColor: '#f85149',
                cancelButtonColor: '#30363d',
                confirmButtonText: 'Yes, cancel it'
            });

            if (result.isConfirmed) {
                try {
                    const response = await fetch('/orders/cancel-item', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ orderId, itemId })
                    });
                    const data = await response.json();
                    if (data.success) {
                        Swal.fire('Cancelled', 'Item has been removed from order.', 'success').then(() => location.reload());
                    } else {
                        Swal.fire('Error', data.message, 'error');
                    }
                } catch (err) { console.error(err); }
            }
        }
    </script>
</body>
</html>