<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Details | Wearify</title>
    <link rel="stylesheet" href="/css/order-details.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
       /* Add this to your <style> block if not already in order-details.css */
.details-grid {
    display: grid;
    grid-template-columns: 1.6fr 1fr; /* Adjust ratios for better balance */
    gap: 25px;
    align-items: start;
    margin-top: 30px;
}

/* Ensure the cards have consistent spacing */
.glass-card {
    background: #161b22;
    border: 1px solid #30363d;
    padding: 25px;
    border-radius: 15px;
    margin-bottom: 20px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.2);
}

.summary-row span {
    font-size: 14px;
}
       /* --- Integrated Review Styles --- */
        .btn-item-review {
            background: transparent;
            color: #ffc107;
            border: 1px solid #ffc107;
            padding: 8px 14px;
            border-radius: 6px;
            cursor: pointer;
            font-size: 0.85rem;
            font-weight: 600;
            transition: 0.3s;
            display: inline-flex;
            align-items: center;
            gap: 6px;
        }
        .btn-item-review:hover { background: rgba(255, 193, 7, 0.1); }

        .modal-overlay-review {
            display: none;
            position: fixed;
            top: 0; left: 0; width: 100%; height: 100%;
            background: rgba(0, 0, 0, 0.85);
            z-index: 2000;
            backdrop-filter: blur(8px);
            justify-content: center;
            align-items: center;
        }

        .modal-content-review {
            background: #161b22;
            width: 90%;
            max-width: 450px;
            padding: 30px;
            border-radius: 20px;
            border: 1px solid #30363d;
            text-align: center;
            color: #fff;
        }

        .rating-stars {
            display: flex;
            flex-direction: row-reverse;
            justify-content: center;
            margin: 20px 0;
            gap: 8px;
        }
        .rating-stars input { display: none; }
        .rating-stars label {
            font-size: 35px;
            color: #30363d;
            cursor: pointer;
            transition: 0.2s;
        }
        .rating-stars label:hover,
        .rating-stars label:hover ~ label,
        .rating-stars input:checked ~ label {
            color: #ffc107;
        }

        #reviewComment {
            width: 100%;
            background: #0d1117;
            border: 1px solid #30363d;
            color: #fff;
            padding: 15px;
            border-radius: 12px;
            margin-bottom: 20px;
            resize: none;
        }

        .btn-submit-review {
            width: 100%;
            padding: 14px;
            background: #007aff;
            border: none;
            border-radius: 10px;
            color: #fff;
            font-weight: 700;
            cursor: pointer;
            transition: 0.3s;
        }
        .btn-submit-review:hover { background: #0056b3; }
    </style>
</head>
<body class="dark-theme">

    <%- include('../partials/header') %>


    <main class="item-details-container">
        <nav class="breadcrumb">
            <a href="/user/profile">Profile</a> / 
            <a href="/user/orders">Orders</a> / 
            <span class="active">Order Details</span>
        </nav>

        <header class="order-header">
            <div class="header-main">
                <h1>Order #<%= order.orderId %></h1>
                <span class="status-pill status-<%= order.status.toLowerCase().replace(' ', '-') %>">
                    <%= order.status %>
                </span>
            </div>
            <p class="order-date">Placed on <%= new Date(order.createdAt).toLocaleDateString('en-US', { day: 'numeric', month: 'long', year: 'numeric' }) %></p>
        </header>

        <% if (order.status !== 'Cancelled' && !['Return Requested', 'Returned'].includes(order.status)) { %>
        <section class="tracking-wrapper">
            <div class="tracking-line"></div>
            <div class="tracking-steps">
                <% 
                   const steps = ['Pending', 'Processing', 'Shipped', 'Delivered']; 
                   const currentIdx = steps.indexOf(order.status);
                %>
                <% steps.forEach((step, index) => { %>
                    <div class="step-item <%= currentIdx >= index ? 'active' : '' %>">
                        <div class="step-dot">
                            <i class="fas <%= index === 0 ? 'fa-check' : index === 1 ? 'fa-cog' : index === 2 ? 'fa-truck' : 'fa-home' %>"></i>
                        </div>
                        <span class="step-label"><%= step === 'Pending' ? 'Placed' : step %></span>
                    </div>
                <% }); %>
            </div>
        </section>
        <% } %>

        <div class="details-grid">
            <div class="items-column">
                <h3 class="section-label">Ordered Items</h3>
                <% order.items.forEach(item => { %>
                    <div class="item-card-neat">
                        <div class="item-thumb">
                            <% if (item.product && item.product.images && item.product.images.length > 0) { %>
                                <img src="<%= item.product.images[0] %>" alt="<%= item.product.name %>" style="width: 100%; height: 100%; object-fit: cover; border-radius: 4px;">
                            <% } else { %>
                                <i class="fas fa-box"></i>
                            <% } %>
                        </div>
                        
                        <div class="item-details">
                            <div class="item-title-row">
                                <h4><%= item.product.name %></h4>
                                <span class="item-status-tag"><%= item.status %></span>
                            </div>
                            <p class="item-sub">Quantity: <%= item.quantity %> • Price: $<%= item.price.toFixed(2) %></p>
                            
                            <div class="item-footer-actions">
                                <% if (order.status === 'Delivered' && item.status === 'Delivered') { %>
                                    <button onclick="openReviewModal('<%= item.product._id %>', '<%= item.product.name %>')" class="btn-item-review">
                                        <i class="fas fa-star"></i> Write Review
                                    </button>
                                <% } %>

                                <% if (['Pending', 'Processing'].includes(order.status) && item.status !== 'Cancelled') { %>
                                    <button onclick="cancelItem('<%= order._id %>', '<%= item._id %>')" class="btn-item-cancel">
                                        <i class="fas fa-times"></i> Cancel Item
                                    </button>
                                <% } %>

                                <% if (order.status === 'Delivered' && item.status === 'Delivered') { %>
                                    <button onclick="requestItemReturn('<%= order._id %>', '<%= item._id %>')" class="btn-item-return">
                                        <i class="fas fa-undo"></i> Return Item
                                    </button>
                                <% } %>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>

            <div class="info-column">
                <div class="glass-card">
                    <h3 class="section-label">Shipping Address</h3>
                    <address>
                        <strong><%= order.shippingAddress.fullName %></strong><br>
                        <%= order.shippingAddress.addressLine %><br>
                        <%= order.shippingAddress.city %>, <%= order.shippingAddress.state %> - <%= order.shippingAddress.pincode %><br>
                        <div class="phone-box">
                            <i class="fas fa-phone-alt"></i> <%= order.shippingAddress.phone %>
                        </div>
                    </address>
                </div>
<div class="glass-card">
    <h3 class="section-label">Payment Summary</h3>
    
    <div class="summary-row">
        <span>Method</span>
        <span class="val"><%= order.paymentMethod %></span>
    </div>

    <div class="summary-row">
        <span>Subtotal</span>
        <span class="val">₹<%= order.subtotal.toFixed(2) %></span>
    </div>

    <% if (order.couponDiscount > 0) { %>
        <div class="summary-row" style="color: #39d353;">
            <span>Coupon Discount</span>
            <span class="val">- ₹<%= order.couponDiscount.toFixed(2) %></span>
        </div>
    <% } %>

    <div class="summary-row total-row" style="border-top: 1px solid #30363d; margin-top: 10px; padding-top: 10px;">
        <span style="font-weight: 700; color: #fff;">Grand Total</span>
        <span class="val" style="font-size: 1.2rem; color: #fff; font-weight: 800;">
            ₹<%= order.totalPrice.toFixed(2) %>
        </span>
    </div>

    <div style="margin-top: 20px;">
        <a href="/order/download-invoice/<%= order.orderId %>" 
           class="btn btn-invoice" 
           style="display: flex; align-items: center; justify-content: center; gap: 8px; padding: 12px; background-color: #161b22; color: #f0f6fc; border: 1px solid #30363d; border-radius: 8px; text-decoration: none; font-size: 14px; font-weight: 600; transition: all 0.3s ease;"
           onmouseover="this.style.backgroundColor='#21262d'; this.style.borderColor='#58a6ff';" 
           onmouseout="this.style.backgroundColor='#161b22'; this.style.borderColor='#30363d';">
            <i class="fas fa-file-pdf" style="color: #ef4444;"></i> Download Invoice
        </a>
    </div>
</div>
            </div>
        </div>
    </main>

    <div id="reviewModal" class="modal-overlay-review">
        <div class="modal-content-review">
            <h2 id="modalProductName" style="margin-bottom: 5px;">Product Name</h2>
            <p style="color: #8b949e; font-size: 0.9rem; margin-bottom: 20px;">Rate your purchase</p>
            
            <form id="reviewForm">
                <input type="hidden" id="modalProductId">
                <div class="rating-stars">
                    <input type="radio" name="rating" value="5" id="s5"><label for="s5">★</label>
                    <input type="radio" name="rating" value="4" id="s4"><label for="s4">★</label>
                    <input type="radio" name="rating" value="3" id="s3"><label for="s3">★</label>
                    <input type="radio" name="rating" value="2" id="s2"><label for="s2">★</label>
                    <input type="radio" name="rating" value="1" id="s1"><label for="s1">★</label>
                </div>
                <textarea id="reviewComment" rows="4" placeholder="What did you think of this item?" required></textarea>
                <button type="submit" class="btn-submit-review">Submit Review</button>
                <button type="button" onclick="closeReviewModal()" style="background:transparent; border:none; color:#8b949e; margin-top:15px; cursor:pointer;">Maybe Later</button>
            </form>
        </div>
    </div>

    <footer class="footer">
        <p>© 2026 Wearify. Handcrafted with care.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
      /* --- Review Modal Logic --- */

// 1. Better Close Function: Checks if elements exist to prevent silent crashes
function closeReviewModal() {
    const modal = document.getElementById('reviewModal');
    const form = document.getElementById('reviewForm');
    
    if (modal) modal.style.display = 'none';
    if (form) form.reset();
}

// 2. Open Function: Ensure IDs match your EJS/HTML exactly
function openReviewModal(id, name) {
    const modal = document.getElementById('reviewModal');
    const inputId = document.getElementById('modalProductId');
    const nameDisplay = document.getElementById('modalProductName');

    if (inputId) inputId.value = id;
    if (nameDisplay) nameDisplay.innerText = name;
    if (modal) modal.style.display = 'flex';
}

// 3. Form Submission with Improved Error Handling
const reviewForm = document.getElementById('reviewForm');

if (reviewForm) {
    reviewForm.addEventListener('submit', async (e) => {
        e.preventDefault();

        // Use standard query selector for stars
        const rating = document.querySelector('input[name="rating"]:checked')?.value;
        const productId = document.getElementById('modalProductId')?.value;
        const comment = document.getElementById('reviewComment')?.value;

        // Frontend Validation
        if (!rating) {
            return Swal.fire({
                title: 'Missing Rating',
                text: 'Please select a star rating.',
                icon: 'warning',
                background: '#161b22',
                color: '#fff'
            });
        }

        try {
            // Add a "Loading" state to the button (optional but recommended)
            const submitBtn = reviewForm.querySelector('button[type="submit"]');
            if (submitBtn) submitBtn.disabled = true;

            const response = await fetch('/product/add-review', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ productId, rating, comment })
            });

            const data = await response.json();

            if (data.success) {
                // Close the modal first so the user sees progress
                closeReviewModal();

                await Swal.fire({
                    title: 'Success!',
                    text: 'Thank you for your review!',
                    icon: 'success',
                    background: '#161b22',
                    color: '#fff'
                });

                location.reload();
            } else {
                throw new Error(data.message || 'Failed to post review');
            }
        } catch (err) {
            console.error('Review Submission Error:', err);
            Swal.fire({
                title: 'Error',
                text: err.message || 'Something went wrong',
                icon: 'error',
                background: '#161b22',
                color: '#fff'
            });
        } finally {
            // Re-enable button if something fails
            const submitBtn = reviewForm.querySelector('button[type="submit"]');
            if (submitBtn) submitBtn.disabled = false;
        }
    });
}    // --- Original Logic ---
        async function requestItemReturn(orderId, itemId) {
            const { value: reason } = await Swal.fire({
                title: 'Return Item',
                input: 'select',
                inputOptions: {
                    'Size Issue': 'Size Issue',
                    'Defective': 'Defective Product',
                    'Wrong Item': 'Wrong Item Received',
                    'Quality': 'Quality not as expected'
                },
                inputPlaceholder: 'Reason for return',
                showCancelButton: true,
                background: '#161b22',
                color: '#3fb950',
                confirmButtonColor: '#3fb950'
            });
            if (reason) {
                try {
                    const response = await fetch('/orders/return-item', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ orderId, itemId, reason })
                    });
                    const data = await response.json();
                    if (data.success) Swal.fire('Success', 'Return request sent', 'success').then(() => location.reload());
                } catch (err) { console.error(err); }
            }
        }

        async function cancelItem(orderId, itemId) {
            const result = await Swal.fire({
                title: 'Are you sure?',
                text: "Do you want to cancel this item?",
                icon: 'warning',
                showCancelButton: true,
                background: '#161b22',
                color: '#fff',
                confirmButtonColor: '#f85149',
                cancelButtonColor: '#30363d',
                confirmButtonText: 'Yes, cancel it'
            });
            if (result.isConfirmed) {
                try {
                    const response = await fetch('/orders/cancel-item', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ orderId, itemId })
                    });
                    const data = await response.json();
                    if (data.success) Swal.fire('Cancelled', 'Item removed.', 'success').then(() => location.reload());
                } catch (err) { console.error(err); }
            }
        }
    </script>
</body>
</html>