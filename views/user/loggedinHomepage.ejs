<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Wearify | Style Built for Men</title>

    <link rel="stylesheet" href="/css/logged-in-home.css">
    <script src="https://unpkg.com/@phosphor-icons/web"></script>
</head>

<body>

<!-- ================= HEADER ================= -->

<%- include('../partials/header') %>

<!-- ================= MOBILE MENU ================= -->

<div class="mobile-menu" id="mobileMenu">
    <% categories.forEach(category => { %>
        <a href="/shop/<%= category.name %>"><%= category.name %></a>
    <% }) %>
</div>

<!-- ================= MAIN ================= -->

<main class="container">

    <!-- Hero -->
    <section class="hero-banner">
        <div class="hero-overlay">
            <h1>Style Built for Men</h1>
        </div>
    </section>

    <!-- New Arrivals -->
    <section class="section">
        <h2 class="section-title">New Arrivals</h2>

        <div class="product-grid">
            <% newArrivals.forEach(product => { %>
                <div class="product-card">
                    <div class="product-img-box">
                        <a href="/shop/details/<%= product._id %>">
                            <img src="<%= product.images[0] %>" alt="<%= product.name %>">
                        </a>
                    </div>
                    <p><%= product.name %></p>
                </div>
            <% }) %>
        </div>
    </section>

    <!-- Best Sellers -->
    <section class="section">
        <h2 class="section-title">Best Sellers</h2>

        <div class="product-grid">
            <% bestSellers.forEach(product => { %>
                <div class="product-card">
                    <div class="product-img-box">
                        <a href="/shop/details/<%= product._id %>">
                            <img src="<%= product.images[0] %>" alt="<%= product.name %>">
                        </a>
                    </div>
                    <p><%= product.name %></p>
                </div>
            <% }) %>
        </div>
    </section>

</main>

<!-- ================= MOBILE CART ================= -->

<a href="/home/cart" class="mobile-cart">
    <i class="ph ph-shopping-bag"></i>
    View Cart
</a>

<!-- ================= FOOTER ================= -->

<%- include('../partials/footer') %>


<!-- ================= JS ================= -->

<script>
function toggleMenu() {
    document.getElementById("mobileMenu").classList.toggle("show");
}
</script>
<% if (user && !user.referredBy && user.wallet === 0) { %>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    // Show popup 2 seconds after page load
    window.addEventListener('load', () => {
        setTimeout(() => {
            Swal.fire({
                title: 'Claim Your Bonus!',
                text: "Enter a referral code to get â‚¹50 in your wallet instantly.",
                input: 'text',
                inputPlaceholder: 'Enter code here...',
                showCancelButton: true,
                confirmButtonText: 'Claim Now',
                confirmButtonColor: '#6366f1',
                background: '#161b22',
                color: '#fff',
                preConfirm: (code) => {
                    if (!code) {
                        Swal.showValidationMessage('Code is required');
                    }
                    return code;
                }
            }).then((result) => {
                if (result.isConfirmed) {
                    processReferral(result.value);
                }
            });
        }, 2000);
    });

    async function processReferral(code) {
        try {
            const response = await fetch('/referral/redeem', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ referralCode: code })
            });
            const data = await response.json();

            if (data.success) {
                Swal.fire({
                    icon: 'success',
                    title: 'Bonus Applied!',
                    text: data.message,
                    background: '#161b22',
                    color: '#fff'
                }).then(() => window.location.reload());
            } else {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: data.message,
                    background: '#161b22',
                    color: '#fff'
                });
            }
        } catch (err) {
            console.error("Referral Error:", err);
        }
    }
</script>
<% } %>
</body>
</html>
