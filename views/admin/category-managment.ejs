        <main class="main-content-wrapper">
            <header class="content-header">
                <div class="breadcrumb">Wearify Admin</div>
                <a href="/admin/categories/add" class="btn-primary">Add Category</a>
            </header>

            <section class="table-section">
                <h1>Categories</h1>

                <div class="table-controls">
                    <form method="GET" action="/admin/categories" class="search-wrapper">
  <input 
    type="text"
    name="search"
    placeholder="Search categories..."
    value="<%= search || '' %>"
  >
  
  <% if (search) { %>
    <a href="/admin/categories" class="clear-btn">✖</a>
  <% } %>
</form>

                    <div class="filter-wrapper">
  <form method="GET" action="/admin/categories">
    <select name="status" onchange="this.form.submit()" class="status-filter">
      <option value="all" <%= selectedStatus === 'all' ? 'selected' : '' %>>
        All
      </option>
      <option value="active" <%= selectedStatus === 'active' ? 'selected' : '' %>>
        Active
      </option>
      <option value="blocked" <%= selectedStatus === 'blocked' ? 'selected' : '' %>>
        Inactive
      </option>
    </select>

    <% if (selectedStatus !== 'all') { %>
      <a href="/admin/categories" class="clear-filter">Clear</a>
    <% } %>
  </form>
</div>

                </div>

                <table class="admin-table">
                    <thead>
                        <tr>
                            <th>Category Name</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (categories && categories.length > 0) { %>
                            <% categories.forEach(category => { %>
                                <tr>
                                    <td><%= category.name %></td>
                                    
                                    <td>
                                        <span class="status-badge <%= category.status.toLowerCase() %>">
                                            <%= category.status %>
                                        </span>
                                    </td>
                                    <td class="action-links">
                                        <a href="/admin/categories/edit/<%= category._id %>">Edit</a> | 
                                       <% if (category.status === 'active') { %>
    <form action="/admin/categories/block/<%= category._id %>?_method=PATCH" method="POST" style="display:inline;">
      <button class="action-btn block-btn">Block</button>
    </form>
  <% } else { %>
    <form action="/admin/categories/unblock/<%= category._id %>?_method=PATCH" method="POST" style="display:inline;">
      <button class="action-btn unblock-btn">Unblock</button>
    </form>
  <% } %>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="4" class="empty-msg">No categories found.</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>

                

                <footer class="admin-footer">
                    Wearify Admin ©
                </footer>
            </section>
        </main>
    </div>

</body>
