<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Wearify Admin | Dashboard</title>
    <link rel="stylesheet" href="/css/adminDashboard.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        /* Your EXACT CSS Variables and Styles */
        :root {
            --bg-color: #0d0d12;
            --sidebar-bg: #16161d;
            --card-bg: #1c1c24;
            --text-primary: #ffffff;
            --text-secondary: #a0a0ab;
            --accent-color: #6366f1;
            --border-color: #2e2e3a;
        }

        body {
            margin: 0;
            font-family: 'Inter', sans-serif;
            background-color: var(--bg-color);
            color: var(--text-primary);
            display: flex;
        }

        .main-content {
            margin-left: 280px;
            padding: 40px;
            width: calc(100% - 280px);
        }

        .header {
            display: flex;
            justify-content: space-between; 
            align-items: center;
            margin-bottom: 30px;
        }

        .header-profile {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .profile-icon-container {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            overflow: hidden;
            border: 2px solid #2e2e3a;
            background-color: #1c1c24;
            display: flex;
            justify-content: center;
            align-items: center;
            cursor: pointer;
        }

        .profile-icon-container img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .header-label {
            color: var(--text-secondary);
            font-size: 0.9rem;
            font-weight: 500;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 20px;
            margin-bottom: 30px;
        }

        .card {
            background: var(--card-bg);
            padding: 20px;
            border-radius: 12px;
            border: 1px solid var(--border-color);
        }

        .card h4 { color: var(--text-secondary); margin: 0 0 10px 0; font-weight: 400; }
        .card .value { font-size: 1.5rem; font-weight: 700; }

        .charts-grid {
            display: grid;
            grid-template-columns: 1.5fr 1fr;
            gap: 20px;
            margin-bottom: 30px;
        }

        /* Chart container fix to prevent infinite growing */
        .chart-container {
            position: relative;
            height: 250px;
            width: 100%;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th { text-align: left; color: var(--text-secondary); padding: 15px; border-bottom: 1px solid var(--border-color); }
        td { padding: 15px; border-bottom: 1px solid var(--border-color); }

        .status {
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 0.8rem;
        }
        .delivered, .shipped { background: #065f46; color: #34d399; }
        .processing, .pending { background: #92400e; color: #fbbf24; }
    </style>
</head>
<body>
    <%- include('../partials/sidebar', { activePage: 'dashboard' }) %>

    <div class="main-content">
        <header class="header">
            <div class="header-titles">
                <h1>Dashboard</h1>
                <p style="color: var(--text-secondary); margin: 0;">Overview</p>
            </div>
            
            <div class="header-profile">
                <span class="header-label">Dashboard</span>
                <div class="profile-icon-container">
                    <img src="https://ui-avatars.com/api/?name=Admin&background=6366f1&color=fff" alt="Profile">
                </div>
            </div>
        </header>

        <div class="stats-grid">
            <div class="card">
                <h4>Sales Summary</h4>
<div class="value">₹<%= (stats.revenue || 0).toLocaleString() %></div>            </div>
            <div class="card">
                <h4>Total Orders</h4>
                <div class="value"><%= stats.orders %></div>
            </div>
            <div class="card">
                <h4>Total Revenue</h4>
                <div class="value">₹<%= stats.revenue.toLocaleString() %></div>
            </div>
            <div class="card">
                <h4>Average Order Value</h4>
                <div class="value">₹<%= stats.avgValue.toLocaleString() %></div>
            </div>
        </div>

        <div class="charts-grid">
            <div class="card">
                <h4>Sales Over Time</h4>
                <div class="chart-container">
                    <canvas id="salesChart"></canvas>
                </div>
            </div>
            <div class="card">
                <h4>Orders Per Week</h4>
                <div class="chart-container">
                    <canvas id="ordersChart"></canvas>
                </div>
            </div>
        </div>

        <div class="card">
            <h4>Recent Activity</h4>
            <table>
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Customer</th>
                        <th>Amount</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <% activity.forEach(item => { %>
                    <tr>
                        <td>#<%= item.id %></td>
                        <td><%= item.customer %></td>
                        <td>₹<%= item.amount.toLocaleString() %></td>
                        <td><span class="status <%= item.status.toLowerCase() %>"><%= item.status %></span></td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <script>
        // Soft-coded data from Controller
        const dbChartData = <%- JSON.stringify(chartData) %>;

        // Sales Chart (Line)
        const ctx1 = document.getElementById('salesChart').getContext('2d');
        new Chart(ctx1, {
            type: 'line',
            data: {
                labels: dbChartData.labels,
                datasets: [{
                    label: 'Sales',
                    data: dbChartData.sales,
                    borderColor: '#6366f1',
                    tension: 0.4,
                    fill: false
                }]
            },
            options: { 
                responsive: true,
                maintainAspectRatio: false,
                plugins: { legend: { display: false } }, 
                scales: { 
                    y: { grid: { color: '#2e2e3a' }, ticks: { color: '#a0a0ab' } }, 
                    x: { grid: { display: false }, ticks: { color: '#a0a0ab' } } 
                } 
            }
        });

        // Orders Chart (Bar)
        const ctx2 = document.getElementById('ordersChart').getContext('2d');
        new Chart(ctx2, {
            type: 'bar',
            data: {
                labels: dbChartData.labels,
                datasets: [{
                    data: dbChartData.orders,
                    backgroundColor: '#6366f1',
                    borderRadius: 5
                }]
            },
            options: { 
                responsive: true,
                maintainAspectRatio: false,
                plugins: { legend: { display: false } },
                scales: { 
                    y: { grid: { color: '#2e2e3a' }, ticks: { color: '#a0a0ab' } }, 
                    x: { grid: { display: false }, ticks: { color: '#a0a0ab' } } 
                } 
            }
        });
    </script>
</body>
</html>