        <main class="main-content-wrapper">
            <header class="content-header">
                <div class="breadcrumb">Wearify Admin</div>
                <a href="/admin/categories/add" class="btn-primary">Add Category</a>
            </header>

            <section class="table-section">
                <h1>Categories</h1>

                <div class="table-controls">
                    <form method="GET" action="/admin/categories" class="search-wrapper">
  <input 
    type="text"
    name="search"
    placeholder="Search categories..."
    value="<%= search || '' %>"
  >
  
  <% if (search) { %>
    <a href="/admin/categories" class="clear-btn">✖</a>
  <% } %>
</form>

                    <div class="filter-wrapper">
  <form method="GET" action="/admin/categories">
    <select name="status" onchange="this.form.submit()" class="status-filter">
      <option value="all" <%= selectedStatus === 'all' ? 'selected' : '' %>>
        All
      </option>
      <option value="active" <%= selectedStatus === 'active' ? 'selected' : '' %>>
        Active
      </option>
      <option value="blocked" <%= selectedStatus === 'blocked' ? 'selected' : '' %>>
        Inactive
      </option>
    </select>

    <% if (selectedStatus !== 'all') { %>
      <a href="/admin/categories" class="clear-filter">Clear</a>
    <% } %>
  </form>
</div>

                </div>

                <table class="admin-table">
                    <thead>
                        <tr>
                            <th>Category Name</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (categories && categories.length > 0) { %>
                            <% categories.forEach(category => { %>
                                <tr>
                                    <td><%= category.name %></td>
                                    
                                    <td>
                                        <span class="status-badge <%= category.status.toLowerCase() %>">
                                            <%= category.status %>
                                        </span>
                                    </td>
                                    <td class="action-links">
    <a href="/admin/categories/edit/<%= category._id %>">Edit</a> | 
    <button 
        class="action-btn toggle-category-btn <%= category.status.toLowerCase() === 'active' ? 'block-btn' : 'unblock-btn' %>" 
        data-id="<%= category._id %>"
        data-status="<%= category.status.toLowerCase() %>">
        <%= category.status.toLowerCase() === 'active' ? 'Block' : 'Unblock' %>
    </button>
</td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="4" class="empty-msg">No categories found.</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>

                

                <footer class="admin-footer">
                    Wearify Admin ©
                </footer>
            </section>
        </main>
    </div>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
document.querySelectorAll('.toggle-category-btn').forEach(btn => {
    btn.addEventListener('click', async function() {
        const categoryId = this.dataset.id;
        const currentStatus = this.dataset.status;
        const action = currentStatus === 'active' ? 'block' : 'unblock';

        const result = await Swal.fire({
            title: 'Change Status?',
            text: `Are you sure you want to ${action} this category?`,
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: action === 'block' ? '#d33' : '#28a745',
            confirmButtonText: `Yes, ${action} it!`
        });

        if (result.isConfirmed) {
            try {
                // Ensure this URL matches your backend route
                const response = await fetch(`/admin/categories/${action}/${categoryId}`, {
                    method: 'PATCH', // Matching your ?_method=PATCH from the form
                    headers: { 'Accept': 'application/json' }
                });

                const data = await response.json();

                if (data.success) {
                    const row = this.closest('tr');
                    const badge = row.querySelector('.status-badge');
                    
                    // Toggle new status logic
                    const isNowActive = data.status.toLowerCase() === 'active';
                    this.dataset.status = isNowActive ? 'active' : 'inactive';
                    
                    // Update Button text and classes
                    this.textContent = isNowActive ? 'Block' : 'Unblock';
                    this.className = `action-btn toggle-category-btn ${isNowActive ? 'block-btn' : 'unblock-btn'}`;
                    
                    // Update Badge text and classes
                    badge.textContent = data.status;
                    badge.className = `status-badge ${data.status.toLowerCase()}`;

                    Swal.fire('Success', `Category is now ${data.status}`, 'success');
                }
            } catch (err) {
                Swal.fire('Error', 'Failed to update status', 'error');
            }
        }
    });
});
</script>
</script>
</body>
</html>