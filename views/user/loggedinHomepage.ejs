<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Wearify | Style Built for Men</title>
    <link rel="stylesheet" href="/css/logged-in-home.css">
    <script src="https://unpkg.com/@phosphor-icons/web"></script>
</head>
<body>

    <header class="main-header">
        <div class="logo"><strong>Wearify</strong></div>
        
    
        <% categories.forEach(category => { %>
  <div class="category-card">
   <a href="/shop/<%= category.name%>">

      <h3><%= category.name %></h3>
    </a>
  </div>
<% }) %>



        <div class="header-icons">
            <button class="icon-btn"><i class="ph ph-heart"></i></button>
            <a href="/home/cart"><button class="icon-btn"><i class="ph ph-shopping-bag"></i></button></a>
            
            <div class="user-profile">
  

  <div class="profile-dropdown">
    <a href="/profile"><img src="<%= user?.profilePic ? user.profilePic : `https://api.dicebear.com/7.x/avataaars/svg?seed=${user.name}` %>"
  alt="Profile" alt="Profile"class="avatar"></a>

    
  </div>
</div>

        </div>
    </header>

    <main class="container">
        <section class="hero-banner">
            <div class="hero-overlay">
                <h1>Style Built for Men</h1>
                <!-- <a href="/home/cart" class="btn-shop-now">Shop Now</a> -->
            </div>
        </section>

       

        <section class="section">
            <h2 class="section-title">New Arrivals</h2>
            <div class="product-grid">
                <% newArrivals.forEach(product => { %>
                    <div class="product-card">
                        <div class="product-img-box">
                                <a href="/shop/details/<%=product._id%>"><img src="<%= product.images[0] %>" alt="<%= product.name %>"></a> 
                        </div>
                        <p><%= product.name %></p>
                    </div>
                <% }) %>
            </div>
        </section>

        <section class="section">
            <h2 class="section-title">Best Sellers</h2>
            <div class="product-grid">
                <% bestSellers.forEach(product => { %>
                    <div class="product-card">
                        <div class="product-img-box">
                           <a href="/shop/details/<%=product._id%>"><img src="<%= product.images[0] %>" alt="<%= product.name %>"></a> 
                        </div>
                        <p><%= product.name %></p>
                    </div>
                <% }) %>
            </div>
        </section>
    </main>

    <footer class="main-footer">
        <div class="footer-links">
            <a href="#">About Us</a>
            <a href="#">Contact</a>
            <a href="#">FAQ</a>
            <a href="#">Returns</a>
        </div>
        <div class="social-icons">
            <i class="ph ph-twitter-logo"></i>
            <i class="ph ph-instagram-logo"></i>
            <i class="ph ph-facebook-logo"></i>
        </div>
        <p class="copyright">Â© 2024 Wearify. All rights reserved.</p>
    </footer>

</body>
</html>